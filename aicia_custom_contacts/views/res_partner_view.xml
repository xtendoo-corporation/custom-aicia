    <field name="name">res.partner.simplified.form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>  <!-- AsegÃºrate de usar el ID correcto de la vista original -->
    <field name="arch" type="xml">
        <xpath expr="//notebook[@colspan='4']" position="before">
            <br/>
            <label for="company_ids" string="Allowed Companies"/>
            <field name="company_ids" string="Allowed Companies" widget="many2many_tags" options="{'no_create': True, 'color_field': 'color'}"/>
        </xpath>
    </field>
</record>
</odoo>
