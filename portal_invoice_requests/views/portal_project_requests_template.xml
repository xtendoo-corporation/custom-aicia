<odoo>
    <template id="portal_project_request_template">
        <t t-call="website.layout">
            <div class="container">
                <h1>Send Project Email</h1>
                <form action="/portal/project_request/submit" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <label for="project_name">Project Name</label>
                        <input type="text" class="form-control" name="project_name" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="date_start">Start Date</label>
                        <input type="date" class="form-control" name="date_start" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="date_end">End Date</label>
                        <input type="date" class="form-control" name="date_end" required="required"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </t>
    </template>

    <!-- MenÃº en el portal para acceder al formulario -->
    <record id="portal_project_send_menu" model="website.menu">
        <field name="name">Send Project Email</field>
        <field name="url">/portal/project_request</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">100</field>
    </record>
</odoo>
