<odoo>
    <template id="portal_project_request_template">
        <t t-call="website.layout">
            <!--CABECERA DE LA PÁGINA-->
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-vcss="001"
                         data-snippet="s_title" data-scroll-background-ratio="1" data-name="Título">
                    <span class="s_parallax_bg oe_img_bg"
                          style="background-image: url('/web/image/website.s_parallax_default_image'); background-position: 50% 0;"/>
                    <div class="o_we_bg_filter bg-black-50"/>
                    <div class="container">
                        <!--TÍTULO DE LA PÁGINA-->
                        <h1>Send Project Email</h1>
                    </div>
                </section>
                <!--FORMULARIO-->
                <section class="s_text_block pt40 pb40 o_colored_level" data-snippet="s_text_block" data-name="Texto"
                         style="background-image: none;">
                    <div class="s_allow_columns container">
                        <div class="row">
                            <div class="col-lg-8 mt-4 mt-lg-0">
                                <p>
                                    Please fill out the form below to send a project request email.
                                </p>
                                <div class="container">

                                    <form action="/portal/project_request/submit" method="POST"
                                          enctype="multipart/form-data">
                                        <input type="hidden" name="csrf_token"
                                               t-att-value="request.csrf_token()"/>

                                        <div class="s_website_form_rows row s_col_no_bgcolor">
                                            <!--COMPANY REQUIRED-->
                                            <div
                                                class="mb-0 py-2 col-12 s_website_form_field s_website_form_required s_website_form_model_required"
                                                data-type="char" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label
                                                        class="col-form-label col-sm-auto s_website_form_label"
                                                        style="width: 200px" for="contact">
                                                        <span class="s_website_form_label_content">Company
                                                        </span>
                                                        <span class="s_website_form_mark">*</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <select id="company_id" name="company_id"
                                                                class="form-control s_website_form_input">
                                                            <t t-foreach="companies" t-as="company">
                                                                <option t-att-value="company.id">
                                                                    <t t-esc="company.name"/>
                                                                </option>
                                                            </t>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--PROJECT NAME REQUIRED-->
                                            <div
                                                class="mb-0 py-2 col-12 s_website_form_field s_website_form_required s_website_form_model_required"
                                                data-type="date" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label
                                                        class="col-form-label col-sm-auto s_website_form_label"
                                                        style="width: 200px" for="contact">
                                                        <span class="s_website_form_label_content">Project Name
                                                        </span>
                                                        <span class="s_website_form_mark">*</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input type="text" class="form-control"
                                                               name="project_name"
                                                               required="required"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--START DATE REQUIRED-->
                                            <div
                                                class="mb-0 py-2 col-12 s_website_form_field s_website_form_required s_website_form_model_required"
                                                data-type="date" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label
                                                        class="col-form-label col-sm-auto s_website_form_label"
                                                        style="width: 200px" for="contact">
                                                        <span class="s_website_form_label_content">Start Date
                                                        </span>
                                                        <span class="s_website_form_mark">*</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input type="date" class="form-control" name="date_start"
                                                               required="required"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--END DATE REQUIRED-->
                                            <div
                                                class="mb-0 py-2 col-12 s_website_form_field s_website_form_required s_website_form_model_required"
                                                data-type="date" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label
                                                        class="col-form-label col-sm-auto s_website_form_label"
                                                        style="width: 200px" for="contact">
                                                        <span class="s_website_form_label_content">End Date
                                                        </span>
                                                        <span class="s_website_form_mark">*</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input type="date" class="form-control" name="date_end"
                                                               required="required"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--SIGNED CONTRACT REQUIRED-->
                                            <div
                                                class="mb-0 py-2 col-12 s_website_form_field s_website_form_required s_website_form_model_required"
                                                data-type="binary" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label
                                                        class="col-form-label col-sm-auto s_website_form_label"
                                                        style="width: 200px" for="contact">
                                                        <span class="s_website_form_label_content">Signed
                                                            Contract
                                                        </span>
                                                        <span class="s_website_form_mark">*</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input type="file" class="form-control"
                                                               name="signed_contract"
                                                               accept=".pdf,.doc,.docx"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--BUDGET FILE REQUIRED-->
                                            <div
                                                class="mb-0 py-2 col-12 s_website_form_field s_website_form_required s_website_form_model_required"
                                                data-type="binary" data-name="Field">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label
                                                        class="col-form-label col-sm-auto s_website_form_label"
                                                        style="width: 200px" for="contact">
                                                        <span class="s_website_form_label_content">Budget
                                                            File
                                                        </span>
                                                        <span class="s_website_form_mark">*</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input type="file" class="form-control"
                                                               name="budget_file"
                                                               accept=".pdf,.doc,.docx"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--SEND BUTTON-->
                                            <div class="mb-0 py-2 col-12 s_website_form_submit"
                                                 data-name="Submit Button">
                                                <div class="row s_col_no_resize s_col_no_bgcolor align-items-center">
                                                    <div class="col-sm-auto" style="width: 200px;"/>
                                                    <div class="col-sm">
                                                        <button type="submit"
                                                                class="btn btn-primary s_website_form_send">Submit
                                                        </button>
                                                    </div>
                                                </div>
                                                <span id="s_website_form_result"/>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <!-- Menú en el portal para acceder al formulario -->
    <record id="portal_project_send_menu" model="website.menu">
        <field name="name">Send Project Email</field>
        <field name="url">/portal/project_request</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">100</field>
    </record>
</odoo>
